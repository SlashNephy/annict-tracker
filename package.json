{
  "name": "annict-tracker",
  "version": "0.0.0",
  "private": true,
  "author": "SlashNephy",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach -pi run build",
    "dev": "yarn workspace functions dev",
    "format": "concurrently -n format: -m 1 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SlashNephy/annict-tracker"
  },
  "workspaces": [
    "pages",
    "functions"
  ],
  "devDependencies": {
    "@slashnephy/eslint-config": "1.0.6",
    "@slashnephy/prettier-config": "0.1.27",
    "concurrently": "8.2.1",
    "eslint": "8.49.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "prettier": "3.0.3"
  },
  "eslintConfig": {
    "extends": "@slashnephy/eslint-config",
    "rules": {
      "no-restricted-syntax": [
        "error",
        {
          "selector": "TSEnumDeclaration"
        }
      ]
    },
    "overrides": [
      {
        "files": "functions/**/*.ts",
        "parserOptions": {
          "project": "./functions/tsconfig.json"
        }
      },
      {
        "files": [
          "pages/src/**/*.{ts,tsx}",
          "pages/graphql/*/generated/*.ts"
        ],
        "parserOptions": {
          "project": "./pages/tsconfig.json"
        }
      },
      {
        "files": [
          "pages/vite.config.ts",
          "pages/graphql/*/codegen.ts"
        ],
        "parserOptions": {
          "project": "./pages/tsconfig.node.json"
        }
      }
    ]
  },
  "packageManager": "yarn@3.6.3"
}
