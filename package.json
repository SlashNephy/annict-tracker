{
  "name": "annict-tracker",
  "version": "0.0.0",
  "private": true,
  "author": "SlashNephy",
  "repository": {
    "type": "git",
    "url": "https://github.com/SlashNephy/annict-tracker"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach -pi run build",
    "deploy": "yarn build && wrangler pages deploy pages/dist",
    "dev": "wrangler pages dev --compatibility-date=2023-09-04 -- yarn workspace pages dev",
    "format": "concurrently -n format: -m 1 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check ."
  },
  "devDependencies": {
    "@slashnephy/eslint-config": "2.0.0",
    "@slashnephy/prettier-config": "0.1.27",
    "concurrently": "8.2.1",
    "eslint": "8.50.0",
    "prettier": "3.0.3",
    "wrangler": "3.8.0"
  },
  "packageManager": "yarn@3.6.3",
  "eslintConfig": {
    "extends": "@slashnephy/eslint-config",
    "rules": {
      "@typescript-eslint/prefer-literal-enum-member": [
        "error",
        {
          "allowBitwiseExpressions": true
        }
      ],
      "@typescript-eslint/no-unsafe-enum-comparison": "off",
      "import/no-anonymous-default-export": "off",
      "no-void": "off",
      "yoda": [
        "error",
        "never",
        {
          "exceptRange": true
        }
      ]
    },
    "overrides": [
      {
        "files": "functions/**/*.ts",
        "parserOptions": {
          "project": "./functions/tsconfig.json"
        }
      },
      {
        "files": "pages/src/**/*.{ts,tsx}",
        "parserOptions": {
          "project": "./pages/tsconfig.json"
        }
      },
      {
        "files": "pages/vite.config.ts",
        "parserOptions": {
          "project": "./pages/tsconfig.node.json"
        }
      },
      {
        "files": "vercel/**/*.{ts,tsx}",
        "parserOptions": {
          "project": "./vercel/tsconfig.json"
        },
        "rules": {
          "react-refresh/only-export-components": "off"
        }
      }
    ]
  },
  "workspaces": [
    "pages",
    "functions",
    "vercel"
  ]
}
